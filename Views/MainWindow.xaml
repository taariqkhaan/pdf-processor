<Window x:Class="PdfProcessor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfProcessor.ViewModels"
        mc:Ignorable="d"
        Title="Cable Schedule QC" Height="Auto" Width="600"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Grid Margin="10" IsEnabled="{Binding IsEnabled}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/> 
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label and TextBox bill of wire -->
        <TextBlock Grid.Row="0" 
                   Grid.Column="0" 
                   Margin="5"
                   FontSize="14"
                   Text="Bill of Wire PDF:"/>
        <TextBox Grid.Row="1" 
                 Grid.Column="0" 
                 Margin="5"
                 Padding="5" 
                 FontSize="14"
                 Text="{Binding BowPath, Mode=TwoWay}"/>
        <Button Grid.Row="1" 
                Grid.Column="1" 
                Width="40"
                Margin="5"
                Padding="5"
                FontSize="14"
                Content="..." 
                Command="{Binding BrowseBowCommand}"/>

        <!-- Label and TextBox for drawings -->
        <TextBlock Grid.Row="2" 
                   Grid.Column="0" 
                   Margin="5"
                   FontSize="14"
                   Text="Drawings PDF:"/>
        <TextBox Grid.Row="3" 
                 Grid.Column="0" 
                 Margin="5"
                 Padding="5" 
                 FontSize="14"
                 Text="{Binding DrawingsPath, Mode=TwoWay}"/>
        <Button Grid.Row="3" 
                Grid.Column="1" 
                Width="40"
                Margin="5"
                Padding="5"
                FontSize="14"
                Content="..." 
                Command="{Binding BrowseDrawingsCommand}"/>
        
        <!-- Checkboxes Section -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <CheckBox Content="Process Bill of Wire" 
                      FontSize="14" Margin="5"
                      IsChecked="{Binding ProcessBow, Mode=TwoWay}"/>
            <CheckBox Content="Process Drawing"
                      FontSize="14" Margin="5"
                      IsChecked="{Binding ProcessDrawing, Mode=TwoWay}"/>
            <CheckBox Content="Analyze Database"
                      FontSize="14" Margin="5"
                      IsChecked="{Binding AnalyzeDatabase, Mode=TwoWay}"/>
            <CheckBox Content="Create Hyperlinks"
                      FontSize="14" Margin="5"
                      IsChecked="{Binding CreateHyperlinks, Mode=TwoWay}"/>
        </StackPanel>
        
        <!-- Rotate/Revert Rotation Radio Buttons -->
        <GroupBox Header="Vertical Drawings Rotation" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5">
            <StackPanel>
                <RadioButton Content="Rotate Drawings"
                             FontSize="14" Margin="5"
                             IsChecked="{Binding IsRotateVerticalDrawings, Mode=TwoWay}"/>
                <RadioButton Content="Revert Rotation"
                             FontSize="14" Margin="5"
                             IsChecked="{Binding IsRevertVerticalDrawings, Mode=TwoWay}"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Process Button -->
        <Button Grid.Row="6" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Width="150"
                Height="40"
                Margin="5"
                Padding="5"
                FontSize="14"
                HorizontalAlignment="Center"
                Content="Process" 
                Command="{Binding ProcessCommand}"/>
        
        <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="5" Padding="5"
                   FontSize="14"
                   Foreground="Green"
                   Text="{Binding StatusMessage}"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
